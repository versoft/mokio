.span12
  = render :partial => "mokio/common/notice"
  .box
    - h4class = has_data_files?(obj) ? 'tab-header' : nil
    = box_title nil, h4class do
      = bt("edit_title", obj.respond_to?(:type) ? obj.type : @obj_class)
    - if show_tabbed_form?(obj)
      = render :partial => "mokio/common/form_content_tabbed", locals: {obj: obj}
    - else
      = render :partial => "mokio/common/form_content", locals: {obj: obj}
